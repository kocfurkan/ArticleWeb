
@model  List<Note>


@{
    ViewBag.Title = "Index";
}

<style>
    .carousel .item {
        height: 300px;
    }

    .item img {
        position: absolute;
        top: 0;
        left: 0;
        min-height: 300px;
    }
</style>

<div class="container">

    <div class="row">

        <div class="col-md-3">
            @Html.Partial("PartialPageCategories")
        </div>

        <div class="col-md-9">

            <div class="row carousel-holder">

                <div class="col-md-12">
                    <div id="carousel-example-generic" class="carousel slide " data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="item active">
                                <img class="slide-image" src="~/Image/sunset-minimalist-triangle-sky-wallpaper-preview.jpg" />
                            </div>
                            <div class="item">
                                <img class="slide-image" src="~/Image/simple-simple-background-minimalism-black-background-wallpaper-preview.jpg" />
                            </div>
                            <div class="item">
                                <img class="slide-image" src="~/Image/sunset-minimalist-triangle-sky-wallpaper-preview.jpg" />
                            </div>
                        </div>
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </div>
                </div>

            </div>

            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            <img src="http://placehold.it/320x150" alt="">
                            <div class="caption">
                                <h4>
                                    <a href="#">@item.Title</a>
                                </h4>
                                <h6 class="text-right"><span class="glyphicon glyphicon-user" style="margin-right:0.3rem"></span>@item.User.Name <br /><span class="glyphicon glyphicon-time">@item.UpdateDate.ToString("dd.MM.yy HH:mm")</span></h6>

                                @if (!string.IsNullOrEmpty(item.Text) && item.Text.Length > 40)
                                {
                                    <p>
                                        @item.Text.Substring(0, 40)...
                                        <a href="#" class="btn btn-default btn-xs bottom-right">Show All</a>
                                    </p>
                                }
                                else
                                {
                                    <p>@item.Text</p>
                                }
                            </div>
                            <div>
                                <hr />
                            </div>
                            <div class="ratings">
                                <p class="pull-right"><button class="btn btn-primary btn-xs "><span class="glyphicon glyphicon-comment" style="margin-right:0.3rem"></span>Comments</button></p>
                                <p>
                                    <button class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-heart-empty" style="margin-right:0.3rem"></span>@item.LikeNumber</button>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>

    </div>

</div>
